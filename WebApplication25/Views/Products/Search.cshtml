@model IEnumerable<WebApplication25.Models.Product>

@{
    ViewData["Title"] = "Search";
}

<h1>Search Results</h1>


<div class="container">
    
    <div class="row">

@foreach (var item in Model)
{


          
    <div class="col-sm-12 col-md-4 col-4 ">
        <div class="card">
            <div class="card-header d-flex justify-content-center " >

        @if (item.Images != null)
        {                <a class="card-link" asp-action="Details" asp-route-id="@item.id" asp-controller="Products">


                <img style="height: 200px"src="@item.Images.FirstOrDefault().ActualImage" alt="Card image cap">

            </a>
        }
            </div>
            <div class="card-body">
                         
                          
                <h4 class="card-title">@item.Name</h4>
                <p class="card-text">@item.Description</p>
                
                @if (item.price == 0)
                {
                    <p class="card-text">Confidential Price</p>

                }
                else
                {
                    <p class="card-text">@item.price EGP</p>

                }
                <p>@item.Location</p>
                <p>
                    @{
                        DateTime date = @item.publishedAt;
                        var days = DateTime.Now.Subtract(date).Days;
                        //{date.Day}/{date.Month}/{date.Year}
                        string DaysAgo="0";
                        if (days == 0)
                        {
                            DaysAgo = "Today";
                        }
                        else
                        {
                            DaysAgo = $"{DaysAgo} days ago";
                        }
                    }
                    Published :@DaysAgo
                            </p>
            </div>
        </div>
    </div>
    
}
    
</div>

    </div>
